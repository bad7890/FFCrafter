<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mengtun.ffcrafter.dao.mapper.FFRecipeMapper" >
  <select id="getRecipeByItemId" resultType="cn.hutool.json.JSONObject">
    select * from ff_item where recipe_item_id = #{itemId}
  </select>

  <select id="getRecipeByRecipeId" resultType="cn.hutool.json.JSONObject">
    select * from ff_item where item_id = #{id}
  </select>

</mapper>